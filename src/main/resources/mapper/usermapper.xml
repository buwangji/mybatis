<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.laowang.mapper.UserMapper">
    <select id="findById" parameterType="int" resultType="UserMapper">
          SELECT * FROM user where id = #{id}
    </select>

    <insert id="save" parameterType="UserMapper">
        INSERT INTO user (name,tel) VALUES (#{name},#{tel})
    </insert>

    <update id="update" parameterType="UserMapper">
        UPDATE user SET name = #{name},tel = #{tel} where id = #{id}
    </update>

    <delete id="del" parameterType="int">
        DELETE FROM user where id = #{id}
    </delete>




</mapper>